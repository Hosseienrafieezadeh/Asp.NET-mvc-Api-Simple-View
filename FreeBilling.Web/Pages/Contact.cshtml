@page
@model ContactModel
@{
}
@section Scripts{
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link href=
          "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
          rel="stylesheet">
}

<div class="container">
<h1 class="mt-1 mb-5 pb-1">@Model.Title</h1>
    <form method="post">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <!-- Adjust column size as needed -->
                <div class="form-group">
                    <label asp-for="Contact.Name" class="col-form-label">Name</label>
                    <input class="form-control" asp-for="Contact.Name" />
                    <span asp-validation-for="Contact.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contact.Email" class="col-form-label">Email</label>
                    <input class="form-control" asp-for="Contact.Email" />
                    <span asp-validation-for="Contact.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <!-- Adjust column size as needed -->
                <div class="form-group">
                    <label asp-for="Contact.Subject" class="col-form-label">Subject</label>
                    <select class="form-control" asp-for="Contact.Subject">
                        <option>Work</option>
                        <option>Personal</option>
                        <option>Proposal</option>
                    </select>
                    <span asp-validation-for="Contact.Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contact.Body" class="col-form-label">Message</label>
                    <textarea class="form-control" rows="4" asp-for="Contact.Body"></textarea>
                    <span asp-validation-for="Contact.Body" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-12">
                <button class="btn btn-primary" type="submit">Send</button>
            </div>
            <div class="col-12 " > @Model.Message</div> <!-- Full width message -->
        </div>
    </form>
</div>

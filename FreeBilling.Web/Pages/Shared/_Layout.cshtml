<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Free Billing - @ViewBag.Title</title>
    <script src="~/lib/js/jquery-3.3.1.min.js"></script>
    <script src="~/lib/js/bootstrap.bundle.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    @RenderSection("header",false)
</head>
<body>
<header class="bg-primary text-white py-4">
    <div class="container">
        <h1>Free Billing</h1>
        <ul class="nav">
            <li class="nav-item"><a class="nav-link text-white" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Contact">Contact</a></li>
            <li class="nav-item"><a class="nav-link text-white" href="/Customer">Customers</a></li>
           @if (User.Identity?.IsAuthenticated == true)
            {
                <li class="nav-item">@User.Identity?.Name-<a class="nav-link text-white" asp-area="Identity"asp-page="/Account/Logout">Logout</a></li>
            }
            else
            {
                <li class="nav-item"><a class="nav-link text-white" asp-area="Identity"asp-page="/Account/Login">Login</a></li>
            }
        </ul>
    </div>
</header>
<div>
        @RenderBody()
    </div>
<footer class="bg-dark text-white text-center py-3"><div class="container">&copy;2024 Free Billing</div></footer>
    @RenderSection("scripts", false)
</body>
</html>
